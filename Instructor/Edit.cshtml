@model TullymurrySystem.Data.Models.Instructor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Instructor</h4>
<hr />
<form asp-action="ConfirmEdit" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- hidden id field - needed to ensure its retained whilst editing -->
    <input type="hidden" asp-for="Id" />


    <div class="form-row">
        <div class="form-group col-4">
            <label asp-for="Surname" class="control-label"></label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Email" class="control-label"></label>
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="TelNum" class="control-label"></label>
            <input asp-for="TelNum" class="form-control" />
            <span asp-validation-for="TelNum" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </div>
</form>
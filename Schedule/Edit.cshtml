@model Schedule

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Schedule</h4>
<hr />
<form asp-action="ConfirmEdit" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- hidden id field - needed to ensure its retained whilst editing -->
    <input type="hidden" asp-for="Id" />


    <div class="form-row">
        <div class="form-group col-4">
            <label asp-for="ScheduleType" class="control-label"></label>
            <input asp-for="ScheduleType" class="form-control" />
            <span asp-validation-for="ScheduleType" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="DateOfEvent" class="control-label"></label>
            <input type="datetime" asp-for="DateOfEvent" class="form-control" />
            <span asp-validation-for="DateOfEvent" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="HorseId" class="control-label">Horse</label>
        <select asp-for="HorseId" class="form-control" asp-items="@ViewBag.Horses" ))">
            <option>Select Horse</option>
        </select>
        <span asp-validation-for="HorseId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SupplierId" class="control-label">Supplier</label>
        <select asp-for="SupplierId" class="form-control" asp-items="@ViewBag.Suppliers" ))">
            <option>Select Supplier</option>
        </select>
        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </div>
</form>
@model Lesson


<h4>Lesson</h4>
   
<form asp-action="ConfirmEdit" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- hidden id field - needed to ensure its retained whilst editing -->
    <input type="hidden" asp-for="Id" />


    <div class="form-row">
        <div class="form-group col-4">
            <label asp-for="DateAndTime" class="control-label"></label>
            <input asp-for="DateAndTime" class="form-control" />
            <span asp-validation-for="DateAndTime" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Duration" class="control-label"></label>
            <input type="number" asp-for="Duration" class="form-control" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="LessonType" class="control-label"></label>
            <input asp-for="LessonType" class="form-control" />
            <span asp-validation-for="LessonType" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="LessonPlan" class="control-label"></label>
        <textarea rows="6" asp-for="LessonPlan" class="form-control"></textarea>
        <span asp-validation-for="LessonPlan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="InstructorId" class="control-label">Instructor</label>
        <select asp-for="InstructorId" class="form-control" asp-items="@ViewBag.Instructors" ))">
            <option>Select Instructor</option>
        </select>
        <span asp-validation-for="InstructorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model TullymurrySystem.Data.Models.Horse

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Horse</h4>
<hr />
<form asp-action="ConfirmEdit" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- hidden id field - needed to ensure its retained whilst editing -->
    <input type="hidden" asp-for="Id" />


    <div class="form-row">
        <div class="form-group col-4">
            <label asp-for="HorseName" class="control-label"></label>
            <input asp-for="HorseName" class="form-control" />
            <span asp-validation-for="HorseName" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="DateOfBirth" class="control-label"></label>
            <input type="date" asp-for="DateOfBirth" class="form-control" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Breed" class="control-label"></label>
            <input asp-for="Breed" class="form-control" />
            <span asp-validation-for="Breed" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="HorseLevel" class="control-label"></label>
            <input asp-for="HorseLevel" class="form-control" />
            <span asp-validation-for="HorseLevel" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </div>
</form>